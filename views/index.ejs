<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="styles/style.css">
    <title>BookWise</title>
</head>
<body>
    <%- include('header.ejs') %>
    <form method="POST">
        <div class="card thin-card">
        
        <div class="card-body d-flex align-items-end">
            <div class="flex-grow-1">
                <label for="sortSelect" class="form-label">Sort by:</label>
                <select name="sort" class="form-select" id="sortSelect">
                    <option value="title">Title</option>
                    <option value="newest">Newest</option>
                    <option value="best">Best</option>
                </select>
            </div>
            <button formaction="/sort" id="sortButton" class="btn btn-primary btn-brown">Go</button>
        </div>
    
    </div></form>
    
    
    
    
    <% for(let book of books) { %>
        <div class="card">
            <img src="<%= book.image_path %>" alt="Image">
            <div class="content">
                <a href="/<%= book.id %>"  style="text-decoration: none; color: inherit;">
                    <h2> <%= book.title %> </h2>
                </a>
                <p><%= book.short_intro %></p>
                
                <div class="rating">
                    <% for( let i = 0; i < book.rating; i++ ) { %>
                        <span class="star">‚≠ê</span>
                    <% } %>
                    <!-- Adjust the number of stars based on the rating -->
                </div>
        
                <p class="date"><%= book.date_ %></p>
            </div>
        </div>
    
    <% } %>
    
    

    <%- include('footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>